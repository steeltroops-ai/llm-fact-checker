{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Fact Base Schema",
    "description": "JSON schema for the RAG fact verification system's trusted fact base. Each fact includes a verified statement, metadata, and a 384-dimensional embedding vector for semantic similarity search.",
    "type": "object",
    "required": [
        "version",
        "facts"
    ],
    "properties": {
        "version": {
            "type": "string",
            "description": "Schema version for compatibility tracking",
            "pattern": "^\\d+\\.\\d+\\.\\d+$",
            "examples": [
                "1.0.0"
            ]
        },
        "last_updated": {
            "type": "string",
            "description": "ISO 8601 timestamp of last fact base update",
            "format": "date-time",
            "examples": [
                "2024-01-15T10:30:00Z"
            ]
        },
        "facts": {
            "type": "array",
            "description": "Collection of verified factual statements with embeddings",
            "minItems": 1,
            "items": {
                "$ref": "#/definitions/fact"
            }
        }
    },
    "definitions": {
        "fact": {
            "type": "object",
            "required": [
                "id",
                "claim",
                "category",
                "source",
                "publication_date",
                "embedding"
            ],
            "properties": {
                "id": {
                    "type": "string",
                    "description": "Unique identifier for the fact (format: fact_XXX or pib-YYYY-XXX)",
                    "pattern": "^(fact_[0-9]{3,}|pib-\\d{4}-\\d{3})$",
                    "examples": [
                        "fact_001",
                        "pib-2024-001"
                    ]
                },
                "claim": {
                    "type": "string",
                    "description": "The verified factual claim from PIB",
                    "minLength": 10,
                    "maxLength": 500,
                    "examples": [
                        "Government announces free electricity to farmers",
                        "India launches Ayushman Bharat health insurance scheme"
                    ]
                },
                "category": {
                    "type": "string",
                    "description": "Domain category for the fact",
                    "enum": [
                        "agriculture",
                        "health",
                        "economy",
                        "infrastructure",
                        "education"
                    ],
                    "examples": [
                        "agriculture",
                        "health"
                    ]
                },
                "source": {
                    "type": "string",
                    "description": "PIB source URL or reference",
                    "format": "uri",
                    "examples": [
                        "https://pib.gov.in/PressReleasePage.aspx?PRID=123456"
                    ]
                },
                "publication_date": {
                    "type": "string",
                    "description": "Date when the fact was published (ISO 8601 format)",
                    "format": "date",
                    "examples": [
                        "2024-01-15",
                        "2023-12-20"
                    ]
                },
                "embedding": {
                    "type": "array",
                    "description": "384-dimensional embedding vector from all-MiniLM-L6-v2 model",
                    "minItems": 384,
                    "maxItems": 384,
                    "items": {
                        "type": "number",
                        "description": "Embedding dimension value (typically between -1 and 1)"
                    }
                },
                "metadata": {
                    "type": "object",
                    "description": "Optional additional metadata",
                    "properties": {
                        "confidence": {
                            "type": "number",
                            "description": "Confidence in fact accuracy (0.0-1.0)",
                            "minimum": 0.0,
                            "maximum": 1.0
                        },
                        "tags": {
                            "type": "array",
                            "description": "Additional classification tags",
                            "items": {
                                "type": "string"
                            }
                        },
                        "related_facts": {
                            "type": "array",
                            "description": "IDs of related facts",
                            "items": {
                                "type": "string",
                                "pattern": "^(fact_[0-9]{3,}|pib-\\d{4}-\\d{3})$"
                            }
                        }
                    }
                }
            }
        }
    }
}